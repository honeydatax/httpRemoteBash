Public Sub Socket_Read()
  Dim lists As String[]
  Dim kl As String
  Dim ee As Integer
  Dim vv As String
  Dim vvv As String
  Dim v As String
  Dim f1 As File
  Dim f2 As File
  Dim i As Integer
  Dim scad As String
  ee = 0
  Read #Last, scad, Lof(Last)
  i = InStr(scad, "\n")
  If i < 1 Then Error.Raise("error\r\n")  
  vvv = Mid(scad, i + 1)
  i = InStr(scad, "GET /")
  If i < 1 Then Error.Raise("error")
  i = InStr(scad, "HTTP/1.")
  If i < 1 Then Error.Raise("error")
  scad = Replace(scad, "GET ", "") 
  scad = Replace(scad, "HTTP/1.", "")
  i = InStr(scad, "/")
  If i < 1 Then
      Error.Raise("error")
    Else
      scad = Mid(scad, i)
  Endif
  i = InStr(scad, " ")
  If i < 1 Then
      Error.Raise("error")
    Else
      scad = Mid(scad, 1, i - 1)
  Endif
  lists = Split(scad, "/")
  If lists.Count <> 3 Then Error.Raise("error\r\n")
  If passwords <> lists[1] Then Error.Raise("error\r\n")
  Print Time(); ":"; lists[2]
  ee = 1 
  
  f1 = Open paths & lists[2] For Output Create
  Print #f1, vvv
  Close f1
  ee = 0
  v = "\r\nOK\r\n"
   Write #Last, v, Len(v)
   Close #Last
   Shell "chmod 777 " & paths & lists[2]
   Shell "/bin/sh -c '" & paths & lists[2] & "' &"
  Finally 
    If ee = 1 Then
    Close Last
    End If
  Catch 
    'Write #Last, "error\r\n", 9
End
Public Sub Socket_closed()
  Print "closed..."
  Clients.Remove(Clients.Find(Last))  
End
Public Sub Srv_Connection(Host As String)
  Dim mysock As Socket
  Print Host; ">>>"
  mysock = Srv.Accept()
  Clients.Add(mysock)     
End
Public Sub _New()
  Clients = New Object[]
  Srv = New ServerSocket As "Srv"
  Srv.Port = Tport
  Srv.Type = Net.Internet
  Srv.Listen()
End
